{
    "manifest_version":2,
    "name": "Quick-Translate",
    "version":"1.0",
    "description":"Allows user to input a key command to quickly search for the translation of a word",
    
    "browser_action":{
        "browser_style" : true,
        "default_area" : "personaltoolbar",
        "default_icon" : {
            "32" : "images/icon32.png"
        },
        "default_title" : "Woord Van de Dag",
        "default_popup" : "popup.html"
    },

    "permissions" : [
        "storage",
        "activeTab",
        "tabs"
    ],

    "background" : {
        "scripts":[
            "background.js"
        ]
    },

    "commands" : {
        "_execute_browser_action" : {
            "suggested_key" : {
                "default" : "Ctrl+Alt+A",
                "windows" : "Ctrl+Alt+A",
                "mac" : "Ctrl+Alt+A"
            },
            "description" : "Toggle the popup to search for a word"
        }
    },

    "browser_specific_settings" : {
        "gecko" : {
            "id" : "{09f5e275-a6bb-4669-96e6-feebde5fab9c}"
        }
    }

}